<Window x:Class="ThreeDLineDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ht="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf" 
        Title="3D Line Demo" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Draw Lines" Command="{Binding DrawLinesCommand}" Grid.Row="0" HorizontalAlignment="Left" Margin="10"/>
        <Button Content="Draw Polylines" Command="{Binding DrawPolylinesCommand}" Grid.Row="0" HorizontalAlignment="Center" Margin="10"/>
        <ht:HelixViewport3D ItemsSource="{Binding LinesGroup}" Grid.Row="1" Background="White" ZoomExtentsWhenLoaded="True" x:Name="View1" ShowFrameRate="True" InfiniteSpin="True">
            <ht:DefaultLights/>
            <!-- <ModelVisual3D Content="{Binding LinesGroup}"/> -->
        </ht:HelixViewport3D>
    </Grid>
</Window>