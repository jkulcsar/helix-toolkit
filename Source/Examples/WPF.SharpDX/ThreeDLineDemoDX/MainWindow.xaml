<Window x:Class="ThreeDLineDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hx="http://helix-toolkit.org/wpf/SharpDX" 
        Title="3D Line Demo" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Draw Lines" Command="{Binding DrawLinesCommand}" Grid.Row="0" HorizontalAlignment="Left" Margin="10"/>
        <Button Content="Draw Polylines" Command="{Binding DrawPolylinesCommand}" Grid.Row="0" HorizontalAlignment="Center" Margin="10"/>
        <hx:Viewport3D Grid.Row="1">
            <hx:AmbientLight3D Color="{Binding AmbientLightColor}" />
            <hx:DirectionalLight3D Direction="{Binding DirectionalLightDirection}" Color="{Binding DirectionalLightColor}" />
            <hx:LineGeometryModel3D
                Geometry="{Binding LinesGroup}"
                
                FixedSize="True"
                IsRendering="True"
                Smoothness="1.0"
                Thickness="1.0"
                Color="Green"  />
        </hx:Viewport3D>
    </Grid>
</Window>